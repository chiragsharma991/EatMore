<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColorPrimary">@color/theme_color_primary_dark</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle.Transparent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:textColorPrimary">@color/theme_color_primary_dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AndroidSRC.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#21B6A8</item>
    </style>

    <style name="AndroidSRC.TextAppearance" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
