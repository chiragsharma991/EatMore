<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/search_container"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar"></include>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:id="@+id/set_reject_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@mipmap/reason" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject Reson"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black"

                    />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:alpha="0.2"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/divider_color"
                app:layout_constraintBottom_toTopOf="@+id/set_keepscreen_on"
                app:layout_constraintTop_toBottomOf="@+id/set_reject_view">

            </View>

            <LinearLayout
                android:id="@+id/set_keepscreen_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="56dp">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_keep_on"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/nav_txt_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keep Screen On"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    >
                    <Switch
                        android:id="@+id/set_keepscreen_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_50sdp"
                        />
                </LinearLayout>






            </LinearLayout>


        </android.support.constraint.ConstraintLayout>


        <!--
    <include
        layout="@layout/layout_empty"
        />-->

    </LinearLayout>
</FrameLayout>