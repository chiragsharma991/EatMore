<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/swipe_card"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/theme_color"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:elevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/row_new_order_label"
                android:singleLine="true"
                android:text="New Incoming Order"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/row_new_order_label"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="Swipe/Tab to dismiss"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="normal" />












        </RelativeLayout>


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_close"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:tint="@color/white"
            android:layout_gravity="right"
            />



    </android.support.v7.widget.CardView>


</RelativeLayout>