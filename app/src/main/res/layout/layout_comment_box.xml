<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@+id/row_order_header"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="@dimen/_8sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/dialog_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

             <android.support.v7.widget.AppCompatEditText
                 android:id="@+id/dialog_edt_comment"
                 android:layout_width="match_parent"
                 android:layout_height="80dp"
                 android:inputType="textCapSentences"
                 android:layout_marginLeft="@dimen/_8sdp"
                 android:layout_marginRight="@dimen/_8sdp"
                 android:background="@drawable/border_bg"
                 android:gravity="start"
                 android:hint="@string/reason_error"
                 android:paddingEnd="0dp"
                 android:paddingLeft="@dimen/_8sdp"
                 android:paddingRight="0dp"
                 android:paddingStart="@dimen/_8sdp"
                 android:paddingTop="@dimen/_8sdp"
                 android:textColorHint="@color/darkgray"

                 />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_txt_error"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="gone"
                android:singleLine="true"
                android:text="@string/reason_error"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/red"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_txt_ok"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_gravity="right"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="@color/theme_color"
                android:text="@string/save"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <android.support.v7.widget.AppCompatCheckBox
                     android:id="@+id/cart_checkbox"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="0.17"
                     android:backgroundTint="@color/accent_color"
                     android:buttonTint="@color/accent_color"
                     android:checked="false"
                     android:paddingBottom="10dp"
                     android:paddingEnd="0dp"
                     android:paddingLeft="10dp"
                     android:paddingRight="0dp"
                     android:paddingStart="10dp"
                     android:paddingTop="10dp"
                     android:textSize="12sp" />

             </LinearLayout>-->


        </LinearLayout>



    </android.support.v7.widget.CardView>









</RelativeLayout>