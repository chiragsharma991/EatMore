<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">




        <FrameLayout
            android:id="@+id/main_container_layout"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />





    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="0.9"
        android:fitsSystemWindows="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nav_head_rel"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    >

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nav_icon_img"
                        android:layout_centerVertical="true"
                        app:srcCompat="@mipmap/icon_app"


                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/nav_icon_img"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        >
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Full Name"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:id="@+id/nav_txt_name"
                            android:textColor="@color/white"

                            />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restaurant Name"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/nav_txt_name"
                            android:id="@+id/nav_txt_rest"
                            android:textColor="@color/white"
                            />

                    </RelativeLayout>




                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nav_head_sales"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_below="@+id/nav_head_rel"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:orientation="horizontal"
                        >

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today Sales:"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/white"
                            />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="547 kr"
                            android:singleLine="true"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/nav_head_sales"
                        android:background="@color/white"
                        >

                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:orientation="horizontal"
                        >

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last 7 days Sales:"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/white"
                            />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="54 kr"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/nav_head_sales"
                        android:background="@color/white"
                        >

                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:orientation="horizontal"
                        >

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last 30 days Sales:"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:textColor="@color/white"
                            />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 kr"
                            android:gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/nav_head_sales"
                        android:background="@color/white"
                        android:id="@+id/nav_txt_one"
                        >

                    </View>


                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/nav_head_sales"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:id="@+id/nav_main_order"
                        android:background="@color/green"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            app:srcCompat="@drawable/order"
                            android:tint="@color/white"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="@dimen/_20sdp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orders"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:id="@+id/nav_txt_order"
                            android:textColor="@color/white"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:id="@+id/nav_main_setting"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            app:srcCompat="@drawable/settings"
                            android:tint="@color/white"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="@dimen/_20sdp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:id="@+id/nav_txt_setting"
                            android:textColor="@color/white" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:id="@+id/nav_main_logout"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            app:srcCompat="@drawable/logout"
                            android:tint="@color/white"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_height="@dimen/_20sdp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:id="@+id/nav_txt_logout"
                            android:textColor="@color/white" />

                    </LinearLayout>





                </LinearLayout>







            </RelativeLayout>
        </RelativeLayout>



    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
